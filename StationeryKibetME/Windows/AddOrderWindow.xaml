<Window x:Class="StationeryKibetME.Windows.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StationeryKibetME.Windows"
        mc:Ignorable="d"
        Title="AddOrderWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
            <TextBlock Text="Товар:"/>
            <ComboBox x:Name="CmbProduct"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Продавец:"/>
            <ComboBox x:Name="CmbSeller"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Количество товара на слкаде:"/>
            <TextBox x:Name="TxbCount"/>
            <TextBlock Text="шт."/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Итоговая сумма:"/>
            <TextBox x:Name="TxbPrice"/>
            <TextBlock Text="руб."/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Дата:"/>
            <DatePicker x:Name="DapDate" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnBack" Content="Назад" Click="GoBack_Click"/>
            <Button x:Name="BtnSave" Content="Сохранить" Click="Save_Click"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
